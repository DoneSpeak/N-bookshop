<%- include('components/header') %>
	<div class="main main-white mian-pay">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
					<div class="row">
						<div class="col-md-7">
							<% orders.forEach(function(order){ %>
							<div class="order-detail">
								<div class="tips-div orderlist">
								    <strong>提示！</strong><span class="tips-text">请与3小时内付款</span>
								</div>
								<div class="order-operator">
									<span class="ordernum-text">订单号：</span><span class="order-num"><%= order.oid %></span><span class="order-cancel"><a href="#">取消订单</a></span>
								</div>
								<table>
								<% order.books.forEach(function(book){ %>
									<tr><td class="td_name"><%= book.name %><td class="td_price">￥<%= book.price %></td></td><td class="td_num">x <%= book.num %></td><td class="td_amount">￥<%= book.bookamount %></td></tr>
								<% }); %>
								</table>
								<div class="amount-order tag-right">
									总价：<span class="amount-cost">￥<%= order.amount %></span>
								</div>
							</div>
							<% }); %>
							<!-- <div class="checkout">
								<button class="btn-checkout">结账</button>
							</div> -->
						</div>
						<div class="col-md-5">
							<div class="paygraphic"><img src="/img/pay.png" /></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
<%- include('components/footer') %>